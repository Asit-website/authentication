<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlink}}
</head>

<body>
    {{>navbar}}
    <div class="container my-5">
        <form class="col-md-8 d-block m-auto" action="/register" method="post">
            <div class="mb-3">
                <label for="firstname" class="form-label">Firstname</label>
                <input  required="true" name="firstname" type="text" class="form-control" id="firstname" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="lastname" class="form-label">Lastname</label>
                <input  required="true" name="lastname" type="text" class="form-control" id="lastname" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input  required="true" name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp">
            </div>

            <div class="form-check">
                <input  required="true" class="form-check-input  required="true"" type="radio" name="gender" id="gender">
                <label class="form-check-label" for="gender">
                   male
                </label>
            </div>
            <div class="form-check">
                <input  required="true" class="form-check-input  required="true"" type="radio" name="gender" id="gender" checked>
                <label class="form-check-label" for="gender">
                 femail
                </label>
            </div>

            <div class="mb-3">
                <label for="phone" class="form-label">Phone</label>
                <input  required="true" name="phone" type="number" class="form-control" id="phone">
            </div>

            <div class="mb-3">
                <label for="age" class="form-label">Age</label>
                <input  required="true" name="age" type="number" class="form-control" id="age">
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input  required="true" name="password" type="password" class="form-control" id="password">
            </div>

              <div class="mb-3">
                <label for="confirmpassword" class="form-label">ConfirmPassword</label>
                <input  required="true" name="confirmpassword" type="password" class="form-control" id="confirmpassword">
            </div>
            <input  required="true" value="register" type="submit" class="btn btn-primary"></input  required="true">
        </form>
    </div>
</body>
